<Window x:Class="WpfApp2.NewOrder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="NewOrder" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" HorizontalAlignment="Left" Height="230" Grid.RowSpan="2" VerticalAlignment="Top" Width="292"/>
        <StackPanel Grid.Row = "1" Height="AUTO" Orientation="Horizontal" Margin="0,101,0,0">
            <Button Content="OK" x:Name="Delete" Click="Apply_Click" Width="100" Margin="5"></Button>
            <Button Content="Cancel" x:Name="Cancel" Click="Cancel_Click" Width="100" Margin="5"></Button>
        </StackPanel>
    </Grid>
</Window>
