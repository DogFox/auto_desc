<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="508" Width="801" >
    <Window.Resources>
        <ObjectDataProvider x:Key="getOrders" ObjectType="{x:Type local:ordersDataContext}" MethodName="GetAllOrders"></ObjectDataProvider>
    </Window.Resources>

    <Grid>
        <Menu HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="791">
            <MenuItem Header="Выход" Click="MenuItem_Click"/>
        </Menu>
        <TabControl HorizontalAlignment="Left" Height="439" Margin="0,28,0,0" VerticalAlignment="Top" Width="783">
            <TabItem Header="Заказы">
                <Grid Background="#FFE5E5E5">
                    <DataGrid HorizontalAlignment="Left" Height="411" VerticalAlignment="Top" Width="777"  ItemsSource="{Binding Source={StaticResource getOrders}}" IsSynchronizedWithCurrentItem="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Поставщики">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <DataGrid Height="100" Width="100"/>
        </TabControl>

    </Grid>

</Window>