<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="800" >
    <Window.Resources>
        <ObjectDataProvider x:Key="getOrders" ObjectType="{x:Type local:OrdersDataContext}" MethodName="GetAllOrders"></ObjectDataProvider>
        <ObjectDataProvider x:Key="getCustomers" ObjectType="{x:Type local:CustomersDataContext}" MethodName="GetAllCustomers"  ></ObjectDataProvider>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="791">
            <MenuItem Header="Выход" Click="MenuItem_Click"/>
        </Menu>
        <TabControl Grid.Row="1" HorizontalAlignment="Left" Height="439" Margin="0,0,0,0" VerticalAlignment="Top" Width="783" GotFocus="Get_Focus" >
            <TabItem Name="Order" Header="Заказы">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid Name="OrderGrid" IsReadOnly="False" HorizontalAlignment="Left" Height="411" VerticalAlignment="Top" Width="777" 
                               ItemsSource="{Binding  Source={StaticResource getOrders}}" IsSynchronizedWithCurrentItem="True" Margin="0,0,0,0"
                              LoadingRow="DataGrid_LoadingRow" >
                    </DataGrid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label Content="ContactName" Grid.Row="0" Grid.Column="0" Margin="4"></Label>
                        <Label Content="City" Grid.Row="1" Grid.Column="0" Margin="4"></Label>
                        <Label Content="CompanyName" Grid.Row="2" Grid.Column="0" Margin="4"></Label>
                        <Label Content="Address" Grid.Row="3" Grid.Column="0" Margin="4"></Label>

                        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Path=ContactName}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=City}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=CompanyName}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=Address}" Margin="4"></TextBox>

                        
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Name="Supl" Header="Поставщики">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid Name="SupGrid" IsReadOnly="False" HorizontalAlignment="Left" Height="411" VerticalAlignment="Top" Width="777" 
                                ItemsSource="{Binding Source={StaticResource getOrders}}" IsSynchronizedWithCurrentItem="True" Margin="0,0,0,0"
                              LoadingRow="DataGrid_LoadingRow" >
                    </DataGrid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label Content="ContactName" Grid.Row="0" Grid.Column="0" Margin="4"></Label>
                        <Label Content="City" Grid.Row="1" Grid.Column="0" Margin="4"></Label>
                        <Label Content="CompanyName" Grid.Row="2" Grid.Column="0" Margin="4"></Label>
                        <Label Content="Address" Grid.Row="3" Grid.Column="0" Margin="4"></Label>

                        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Path=ContactName}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=City}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=CompanyName}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=Address}" Margin="4"></TextBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Name="Cust" Header="Покупатель">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid Name="CustGrid" IsReadOnly="False" HorizontalAlignment="Left" Height="411" VerticalAlignment="Top" Width="777" 
                                ItemsSource="{Binding Source={StaticResource getCustomers}}" IsSynchronizedWithCurrentItem="True" Margin="0,0,0,0"
                              CanUserAddRows="True">
                    </DataGrid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label Content="Name" Grid.Row="0" Grid.Column="0" Margin="4"></Label>
                        <Label Content="Phone" Grid.Row="1" Grid.Column="0" Margin="4"></Label>
                        <Label Content="PriceLevel" Grid.Row="2" Grid.Column="0" Margin="4"></Label>
                        <Label Content="Address" Grid.Row="3" Grid.Column="0" Margin="4"></Label>

                        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Path=Name}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=Phone}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=PriceLevel}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=Addres}" Margin="4"></TextBox>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Деталь">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <DataGrid Name="PartsGrid" IsReadOnly="False" HorizontalAlignment="Left" Height="411" VerticalAlignment="Top" Width="777" 
                                ItemsSource="{Binding Source={StaticResource getOrders}}" IsSynchronizedWithCurrentItem="True" Margin="0,0,0,0"
                              LoadingRow="DataGrid_LoadingRow" >
                    </DataGrid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>

                        <Label Content="ContactName" Grid.Row="0" Grid.Column="0" Margin="4"></Label>
                        <Label Content="City" Grid.Row="1" Grid.Column="0" Margin="4"></Label>
                        <Label Content="CompanyName" Grid.Row="2" Grid.Column="0" Margin="4"></Label>
                        <Label Content="Address" Grid.Row="3" Grid.Column="0" Margin="4"></Label>

                        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding Path=ContactName}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="1" Text="{Binding Path=City}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="2" Text="{Binding Path=CompanyName}" Margin="4"></TextBox>
                        <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding Path=Address}" Margin="4"></TextBox>
                    </Grid>
                </Grid>
            </TabItem>
            <DataGrid Height="100" Width="100"/>
        </TabControl>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button Content="Save" x:Name="Save" Click="Save_Click" Width="100" Margin="5"></Button>
            <Button Content="Add" x:Name="Add" Click="Add_Click" Width="100" Margin="5"></Button>
            <Button Content="Delete" x:Name="Delete" Click="Delete_Click" Width="100" Margin="5"></Button>
            <Button Content="Cancel" x:Name="Cancel" Click="Cancel_Click" Width="100" Margin="5"></Button>
        </StackPanel>
    </Grid>

</Window>